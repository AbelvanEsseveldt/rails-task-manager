<h1><strong>My tasks</strong></h1>

<% @tasks.each do |task| %>
<li><input type="checkbox" value="1" name="task[completed]" id="task_completed" <%= task.completed ? "checked": "" %> disabled>
  <%= link_to task.title, task_path(task.id) %>
  </li>
<% end %>



<%= link_to "Create a new task", new_task_path %>

